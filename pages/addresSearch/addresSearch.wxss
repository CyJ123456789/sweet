.hot{
  margin:80rpx 0;
  width: 100vw;
  padding: 0 50rpx;
}
.hot view.caption{
  font-size: 35rpx;
  color: #ddd;
  margin-bottom:30rpx;
}
.hot view:last-child{
  width: 80vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.hot view:last-child text{
  font-size: 33rpx;
  border:1px solid #000;
  border-radius:10rpx;
  padding: 15rpx; 
}
.serachList{
  position: absolute;
  top:9vh;
  left: 2vw;
  width:96vw;
  max-height: 85vh;
  overflow: auto;
  z-index: 2;
  background-color:#fff;
  border: 1px solid #ddd;
  border-radius: 15rpx;
  padding:0 30rpx;
  box-sizing: border-box;
}
.serachList view{
  padding: 25rpx 0;
  border-bottom:1px solid #ddd;
}
.serachList view:last-child{
  border: none;
}

