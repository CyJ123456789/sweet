.bread{
  width: 100vw;
  height: 100vh;
}
.top{
  width: 96vw;
  margin: 20rpx auto;
  display: flex;
}
.top .left{
  width: 15vw;
  height: 15vw;
}
.top .left image{
  width: 50px;
  height: 50px;
}
.top .right{
  width: 81vw;
  box-sizing: border-box;
  margin-left:15rpx; 
}
.first{
  display: flex;
  justify-content: space-between;
}
.first text{
  font-size: 28rpx;
}
.first view:first-child text:first-child{
  padding:5rpx 15rpx;
  background-color: #FF8D1A;
  border-radius: 20rpx;
  margin-right:10rpx; 
}
.first view:last-child text{
  background-color: #FF8D1A;
  border-radius: 50%;
  padding:4rpx 10rpx;
  margin-right:10rpx;
}
.second{
  display: flex;
  box-sizing: border-box;
  margin-top:5rpx;
}
.second text{
  font-size: 25rpx;
}
.second .rate1{
  width: 65%;
  display: flex;
  flex-wrap:nowrap;
  justify-content: space-between; 
  box-sizing: border-box;
}
.second .rate1>text{
  margin-top:10rpx; 
}
.second .rate2{
  width: 35%;
  box-sizing: border-box;
  display: flex;
  flex-wrap:nowrap; 
  justify-content: space-around;
}
.second .rate2 text::before{
  display: inline-block;
  content: "";
  vertical-align: middle;
  height: 100%;
}
.second .rate2 text:first-child{
  box-sizing: border-box;
  padding: 3rpx 6rpx;
  border-radius: 18rpx;
  border:1px solid #FF8D1A;
}
.second .rate2 text:last-child{
  padding: 3rpx 6rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
  background-color:#FF8D1A;
}

.second .rate2 text{
  margin-top: 5rpx;
}
.second .rate2 text::before{
  display: inline-block;
  content: "";
  vertical-align: middle;
  height: 100%;
}
.second .rate2 text:first-child{
  box-sizing: border-box;
  padding: 3rpx 6rpx;
  border-radius: 18rpx;
  border:1px solid #FF8D1A;
}
.second .rate2 text:last-child{
  padding: 3rpx 6rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
  background-color:#FF8D1A;
}
.third{
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
}
.third text{
  font-size: 25rpx;
}
.third view text{
  padding: 0 10rpx;
  box-sizing: border-box;
  border-right: 1px solid #000;
}
.third view text:last-child{
  border:none;
  
}
.activity {
  width: 96vw;
  margin: 0rpx auto;
  font-size: 11px;
  /* border: 1px solid green; */
}
.activity-item {
  display: flex;
  justify-content: space-between;
}
.activity-item view:first-child text:first-child{
  padding:0 3rpx; 
  background-color: #FF8D1A;
  border-radius: 50%;
  margin-right: 5rpx;
}
.activity-item view:last-child{
  display: flex;
}
.activity-item view:last-child image{
  margin-top: -5rpx;
}
.tubiao {
  padding:0 3rpx; 
  background-color: #FF8D1A;
  border-radius: 50%;
  margin-right: 5rpx;
}
.discount{
  margin: 10rpx 0 20rpx 0;
}
.down {
  width: 18px;
	height: 18px;
	font-size: 18px;
	color: rgba(102, 102, 102, 1);
}
.site {
  display: flex;
}
.location {
  width: 14px;
	height: 14px;
	font-size: 14px;
	color: rgba(255, 141, 26, 1);
}
.tabs{
  margin-top: 1.53rem;
}

.meal {
  border-top: rgba(243, 243, 243, 1) solid 0.07rem;
  padding: 1.19rem 1.02rem;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}
.meal-ima {
  /* border: 1px solid blue; */
  width: 15vw;
  margin-right: 3vw;
}
.meal-image {
  width:3.12rem;
  height: 3.12rem;
}
.meal-content {
  width: 78vw;
  /* border: 1px solid blue; */
